/* pages/caiAdd/caiAdd.wxss */
.container{
  width: 100%;
  height: 100%;
}
.header{
  width: 100%;
  text-align: center;
  padding-bottom: 30rpx;
  border-bottom: 1px solid #ccc;
}
.header>text{
  display: inline-block;
  padding: 10rpx 30rpx;
  border: 1px solid #ccc;
  font-size: 32rpx;
  margin: 0 10rpx;
}
.money{
  width: 100%;
  display: flex;
  padding: 50rpx 20rpx;
  border-bottom: 10rpx solid rgb(243, 237, 237);
}
.money>text{
  flex: 1;
}
.zi{
  font-size: 32rpx;
}
.num{
  font-size: 46rpx;
  text-align: right;
  padding-right: 60rpx;
}

.beis{
  width: 100%;
  height: auto;
}
.beis>text{
  width: 100%;
  display: block;
  padding: 30rpx 30rpx;
  font-size: 35rpx;
}
.text{
  width: 80%;
  height: 200rpx;
  border: 1px solid black;
  margin: 0 auto;
}
.icon{
  width: 100%;
  height: 450rpx;

  font-size: 25rpx;
 
}

.icon>view{
  width: 110rpx;
  height: 120rpx;
  margin: 20rpx;
  display: inline-block;
  text-align: center;
}
.icon>view>image{
  width: 100rpx;
  height: 100rpx;
}
.icon>view>text{
  flex: 1;
}
.red{
  background: rgb(37, 35, 35);
  color: #fff;
}
.save{
  width: 200rpx;
  height: 70rpx;
  line-height: 70rpx;
  font-size: 32rpx;
  margin-top: 50rpx;
  background: yellow;
  color: black;
}
.suan{
  width: 100%;
  height: auto;
  display: flex;
  flex-wrap: wrap;
  border-top: 1px solid black;
  border-left: 1px solid black;
  background: #fff;
  position: absolute;
  bottom: 0;
  z-index: 5;
}
.suan>text{
  width: 248rpx;
  height: 130rpx;
  border-right: 1px solid black;
  border-bottom: 1px solid black;
  line-height: 130rpx;
  text-align: center;
  font-size: 45rpx;
  font-weight: 900;
}
.sy{
  color: red;
  font-size: 28rpx;
  font-weight: 900;
}
.back{
  width: 100%;
  height: 100%;
  position: absolute;
  z-index: -1;
  left: 0;
  top: 0;
}